{
  "name": "Notepad_App",
  "version": "1.0.0",
  "main": "./src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "clean-build": "yarn rimraf ./dist",
    "copy-views": "yarn cpy ./src/views/**/* ./dist/views",
    "copy-public": "yarn cpy ./src/public/**/* ./dist/public",
    "build": "yarn clean-build && tsc && tsc-alias && yarn copy-views && yarn copy-public",
    "start": "node ./dist/server.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.7",
    "cpy-cli": "^5.0.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  }
}