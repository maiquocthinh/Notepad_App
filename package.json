{
  "name": "Notepad_App",
  "version": "1.0.0",
  "main": "./src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "clean-build": "rimraf ./dist",
    "copy-views": "cpy ./src/views/**/* ./dist/views",
    "copy-public": "cpy ./src/public/**/* ./dist/public && rimraf ./dist/public/css/tailwind.css",
    "build": "yarn clean-build && tsc && tsc-alias && yarn copy-views && yarn copy-public",
    "start": "node ./dist/server.js",
    "tailwind": "tailwind build -i ./src/public/css/tailwind.css -o ./src/public/css/style.css -w"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/express-useragent": "^1.0.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.9",
    "@types/pg": "^8.10.2",
    "@types/sequelize": "^4.28.15",
    "autoprefixer": "^10.4.14",
    "cpy-cli": "^5.0.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.27",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-session-sequelize": "^7.1.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "express-session": "^1.17.3",
    "express-useragent": "^1.0.15",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "nanoid": "3",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "svg-captcha": "^1.4.0"
  }
}
